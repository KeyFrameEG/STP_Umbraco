@inherits UmbracoViewPage
@{
    var homePage = Umbraco.AssignedContentItem.AncestorOrSelf<HomePage>();
    var children = homePage.MainNavigations;
}
<nav class="navbar navbar-expand-lg navbar-light nav-essal">
  <div class="container-fluid px-0">
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse justify-content-end navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto flex-nowrap">

          @if(children !=null && children.Any())
          {
              foreach(var item in children)
              {
              <li class="nav-item"><a class="nav-link" href="@item.Url">@item.Name</a></li>
              }
              
          }
          <li class="nav-item"><a class="nav-link" type="button" href="innovate/" data-bs-toggle="modal" data-bs-target="#exampleModal">Innovate</a></li>         

      </ul>
      
      </div>
  </div>
</nav>

@await Html.PartialAsync("~/Views/Partials/ModalContent.cshtml")