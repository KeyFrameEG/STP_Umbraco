   @inherits UmbracoViewPage<BlockListItem>
   @using Microsoft.AspNetCore.Http
   @inject IHttpContextAccessor HttpContextAccessor
    @{
    var row = (StartupshomeRow)Model.Content;
      var settings = (FeaturedRowSettings)Model.Settings;
      if(settings?.Hide ?? false){return;}
    if (row.StartupshomeItems == null || !row.StartupshomeItems.Any()) return;
    }
          <div class="row">

               <div class="col-lg-12 my-4">
                <h2 class="migatitle">@row.Title</h2>
          </div>
    @foreach (var item in row.StartupshomeItems)
          {
        var rowItem = (StartupshomeItem)item.Content;
          <div class="col-lg-3 col-6 mb-4">
                <div class="StartupHome">
                <a href="@rowItem.RedirectUrl" class="LinkStartup"></a>
                <div class="ImageStartUpHome">
                    <img alt="Incubators" src="@rowItem.Image.Url()" />
                </div>
                    <h3>@rowItem.Title</h3>
               </div>
          </div>
          }
    <div class="newsinfo mt-4">
        <a href="/allstartups">@row.Subtitle</a>
    </div>
